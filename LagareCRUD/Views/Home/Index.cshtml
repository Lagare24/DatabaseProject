@model IEnumerable<user>

@{
    ViewBag.Title = "Index";
}

<h2>List of Users</h2>
<hr />

@if (!String.IsNullOrEmpty(TempData["msg"] as String)) {
    <div class="alert alert-success">
        @TempData["msg"]
    </div>
}

<div class="row">
    <div class="col-md-12">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Birth Year</th>
                    <th>Birth Month</th>
                    <th>Birth Day</th>
                    <th>Username</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.userId</td>
                        <td>@item.firstName</td>
                        <td>@item.lastName</td>
                        <td>@item.birthYear</td>
                        <td>@item.birthMonth</td>
                        <td>@item.birthday</td>
                        <td>@item.username</td>
                        <td>    
                            <a href="~/Home/Update/@item.userId">Update</a> |
                            <a href="~/Home/Delete/@item.userId" style=color:red onclick='return confirm("Confirm deleting @item.username?")'>Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
